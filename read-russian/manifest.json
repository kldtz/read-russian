{
    "name": "Read Russian",
    "version": "1.0.0",
    "description": "Annotates Russian words with information from Wiktionary.",
    "permissions": [
        "activeTab",
        "declarativeContent",
        "contextMenus",
        "tabs"
    ],
    "background": {
        "page": "background.html"
    },
    "page_action": {
        "default_icon": {
            "16": "images/read-russian-16.png",
            "32": "images/read-russian-32.png",
            "48": "images/read-russian-48.png",
            "256": "images/read-russian-256.png"
        },
        "default_title": "Read Russian",
        "default_popup": "popup.html"
    },
    "icons": {
        "16": "images/read-russian-16.png",
        "32": "images/read-russian-32.png",
        "48": "images/read-russian-48.png",
        "256": "images/read-russian-256.png"
    },
    "content_scripts": [
        {
            "matches": [
                "http://*/*",
                "https://*/*",
                "file://*/*"
            ],
            "js": [
                "js/annotate.js"
            ],
            "css": [
                "css/fonts.css",
                "css/info.css"
            ],
            "run_at": "document_end"
        }
    ],
    "manifest_version": 2
}
